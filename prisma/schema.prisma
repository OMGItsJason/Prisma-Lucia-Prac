generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model UserAccount {
  id String @id 
  username String
  passwordhash String
  sessions Session[]
}


model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      UserAccount     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
